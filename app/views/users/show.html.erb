
<%if admin %>
<!-- Admin User Show -->
  <div style="margin-left: 1rem; margin-top: 1rem; margin-right: 1rem;">
    <div class="row">
      <div class="col-12">
         <h2>Admin Dashboard</h2>
      </div>  
    </div>

    <table class="table ">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Location</th>
          <th scope="col">ISP</th>
          <th scope="col">Bandwidth</th>
          <th scope="col">Email</th>
          <th scope="col">Paypal</th>
          <th scope="col">ISP Verification</th>
          <th scope="col">User Verification</th>
          <th scope="col">Status</th>
          <th scope="col">Approve</th>
        </tr>
      </thead>
  
      <tbody>

          <%@users.where(form_status: "pending").each do |u|%>
            <tr>
              <!-- <th scope="row">1</th> -->
              <td><%=u.id%></td>
              <td><%=u.first_name%> <%=u.last_name%></td>
              <td><%=u.country%>, <%=u.city%>, <%=u.postcode%></td>
              <td><%=u.isp%></td>
              <td><%=u.bandwidth%></td>
              <td><%=u.email%></td>
              <td><%=u.paypal%></td>
              <td><button class="modal_button" id=<%=u.id.to_s%>>Open</button></td>
              <td><button class="modal_button_verf" id=<%=u.id.to_s%>>Open</button></td>
              <td><%=u.form_status%></td>
              <td>
                <%= form_for u do |form| %>
                  <%= form.hidden_field :form_status, :value => "approved"%>
                  <%= form.hidden_field :approved, :value => true%>
                  <%= form.submit 'Approve' %>
              </td> 
            </tr>
          <%end%>
      


          <div class="modal fade" id="modal_id_<%=u.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered nice" role="document">
              <div style="margin: 0 auto;">
                <img id="modal_image" src="<%= @users.find(id=u.id).isp_bill%>">
              </div>
            </div>
          </div>


          <div class="modal fade" id="modal_id_verf_<%=u.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered nice" role="document">
              <div style="margin: 0 auto;">
                <img id="modal_image" src="<%= @users.find(id=u.id).verification_photo%>">
              </div>
            </div>
          </div>

        <%end%>
      </tbody>
    </table>
  </div>



 











  



<%else%>
<!-- Normal User Show -->
  <br>
  <div class="container">
     <div class="row">
        <div class="col-12">
           <h2>Your Dashboard</h3>
        </div> 
     </div>
     <br>
     <div class="row">
        <div class="col-8">
              <h3>Status</h3>

              <table class="table ">
                <thead>
                  <tr>
                    <th scope="col">Current IP</th>
                    <th scope="col">Country</th>
                    <th scope="col">City</th>
                    <th scope="col">Timezone</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td><%= request.env['REMOTE_ADDR']%></td>
                    <td><%country = GeoIP.new('GeoIP.dat').country("210.195.39.201") %><%= country.country_name%></td>
                    <td><%city = GeoIP.new('GeoLiteCity.dat').city("210.195.39.201")%><%= city.city_name%></td>
                    <td><%=city.timezone%></td>
                  </tr>   
                </tbody>
              </table>
        
        <h2>Orders</h3>


               
        </div>


        <div class="col-4">
              <div>
                 <h3>Registration Status</h3>
                <%if @user.form_status == nil%>
                  <div style=" border-style: solid; border-color: #fc5c65; border-width: 1px; width: 100%; text-align: center; margin-top: 1rem; margin-bottom: 1rem; padding-top: 0.5rem; padding-bottom: 0.5rem; border-radius: 5px; color: #fc5c65;">
                    Registration not completed
                  </div>
                  <%=button_to "Complete Registration", edit_user_url, method: :get, class: "btn btn-outline-dark black_btn"%>
                <%else%>
                <%end%>

                <%if @user.form_status == "pending"%>
                  <div style="border-style: solid; border-color: #fed330;  border-width: 1px; width: 100%; text-align: center; margin-top: 1rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-radius: 5px; color: #fed330">
                    Registration Pending
                  </div>
                  <p>Name: <%=@user.first_name%>
                  <%=@user.last_name%></p>
                  <p>Country: <%=@user.country%></p>
                  <p>City: <%=@user.city%></p>
                  <p>Postcode: <%=@user.postcode%></p>
                  <p>Paypal: <%=@user.paypal%></p>
                  <p>ISP: <%=@user.isp%></p>
                  <p>Bandwidth<%=@user.bandwidth%></p>
                <%else%>
                <%end%>

                <%if @user.form_status == "approved"%>
                  <div style="border-style: solid; border-color: #26de81; border-width: 1px; width: 100%; text-align: center; margin-top: 1rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-radius: 5px; color: #26de81;">
                    Registration Approved
                  </div>
                  <p>Name: <%=@user.first_name%>
                  <%=@user.last_name%></p>
                  <p>Country: <%=@user.country%></p>
                  <p>City: <%=@user.city%></p>
                  <p>Postcode: <%=@user.postcode%></p>
                  <p>Paypal: <%=@user.paypal%></p>
                  <p>ISP: <%=@user.isp%></p>
                  <p>Bandwidth<%=@user.bandwidth%></p>
                <%else%>
                <%end%>
              </div>

              <div style="margin-top: 2rem;">
                <h3>Location Status</h3>
                <div id="map" style="margin-top: 1rem;">   
                </div>
              </div>


        </div>
     </div>
  </div>

    <script>
          function initMap() {
            var uluru = {lat: <%=city.latitude%>, lng: <%=city.longitude%>};
            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 10,
              center: uluru
            });
            var marker = new google.maps.Marker({
              position: uluru,
              map: map
            });
          }
        </script>


    <!-- Dont know how this is working without a key? -->
    <script async defer
    src=<%="https://maps.googleapis.com/maps/api/js?key="+ENV['google_key']+"&callback=initMap"%>
    </script>

<%end%>


