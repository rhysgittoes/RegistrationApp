   <div class="row" style="margin-bottom: -0.5rem; margin-top: 0.5rem;">
      <div class="col-4" style="text-align: center;">
         <div style="width: 85%;margin:0 auto;">
            <h3 class="display-3" style="font-size: 2rem; text-align: left;">Registration</h3>
         </div>
      </div>
      <div class="col-8">
      </div>
   </div>
</div>


<div class="col-12" style="margin-top: 1rem;">
   <div class="row">
      <div class="col-4" style="//margin-right: -1rem;">

         <div style=" display: block;text-align: center;  width: 100%; background-color: #2c3e50; padding-top: 1rem;padding-bottom: 0.6rem;">
               <button class="form_navigation_button" id=basic_information_button>
                 <div class="display-3 form_navigation_button_text">
                     Basic Information
                  </div>

                  <div class="chevron_container" id="basic_chevron_information_container" >
                     <i class="fas fa-chevron-right"></i>
                  </div>
               </button>

               <button class="form_navigation_button" id="location_information_button">
                  <div class="display-3 form_navigation_button_text">
                     Location Information
                  </div>

                  <div class="chevron_container" id="location_chevron_information_container" style="display: none;"  >
                     <i class="fas fa-chevron-right"></i>
                  </div>
               </button>

               <button class="form_navigation_button" id="connection_information_button">
                  <div class="display-3 form_navigation_button_text">
                     Technical Details
                  </div>
                  <div class="chevron_container" id="connection_chevron_information_container" style="display: none;" >
                     <i class="fas fa-chevron-right"></i>
                  </div>
               </button>
               <button class="form_navigation_button" id="complete_area_button">
                  <div class="display-3 form_navigation_button_text">
                     Complete
                  </div>
                  <div class="chevron_container" id="finish_chevron_information_container" style="display: none;" >
                     <i class="fas fa-chevron-right"></i>
                  </div>
               </button>
         </div>

      </div>





      <div class="col-8" style="margin-left: -0.4rem; margin-right: 0.4rem;">
         <%= form_for @user do |form| %>
            <div class="form_panel" id="basic_information" style="display: block;">
               <h2 class="display-3" style="font-size: 2rem;">Please provide your basic information</h2>
               <hr>
               <p><span class="form_label">First name:</span><br>
                  <%= form.text_field :first_name, placeholder: "First name*", class: 'register_form_field' %>
               </p>
               <p><span class="form_label">Last name:</span><br> <%= form.text_field :last_name, placeholder: "Last name*", class: 'register_form_field'%></p>
               <p><span class="form_label">Paypal:</span><br> <%= form.text_field :paypal,placeholder: "Paypal Address*", class: 'register_form_field' %></p>

               <button id=from_basic_information_to_location_information>Next</button> 

            </div>
            <div class="form_panel" id="location_information" style="display: none">
               <h2 class="display-3" style="font-size: 2rem;">Please provide details about where you stay</h2>
               <hr>
               <p><span class="form_label">Country:</span><br> <%= form.text_field :country ,placeholder: "Country*", class: 'register_form_field'%></p>
               <p><span class="form_label">City:</span><br> <%= form.text_field :city,placeholder: "City*", class: 'register_form_field' %></p>
               <p><span class="form_label">Postcode:</span><br> <%= form.text_field :postcode,placeholder: "Postcode*", class: 'register_form_field' %></p>

               <button id="from_location_to_basic_information"%>Previous</button> 
               <button id="from_location_to_connection_information"%>Next</button>
               
            </div>

            <div class="form_panel" id="connection_information" style="display: none">
               <h2 class="display-3" style="font-size: 2rem;">Please provide details about your connection</h2>
               <hr>
               <p><span class="form_label">Internet Service Provide:</span><br> <%= form.text_field :isp,placeholder: "ISP Name*", class: 'register_form_field'%></p>
               <p><span class="form_label">Bandwidth:</span><br> <%= form.text_field :bandwidth,placeholder: "Bandwidth*", class: 'register_form_field' %></p>



               <p>
                  <span class="form_label">ISP Bill:</span><br> <%= form.file_field :isp_bill %>
                  <span class="form_label">Verification Photo:</span><br> <%= form.file_field :verification_photo %>
               </p>

               <%= form.hidden_field :form_status, :value => "pending"%>
               <button id="from_connection_to_location_information"%>Previous</button> 
               <button id=from_connection_to_finish_area>Next</button>
            </div>

